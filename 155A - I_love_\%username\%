#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	scanf("%d",&n);
	int arr[n];
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	int c=0;
	int max=arr[0],min=arr[0];
	for(int i=1;i<n;i++)
	{
		if(arr[i]>max)
		{
			c++; 
			max=arr[i];
		}
		if(arr[i]< min)
		{
			c++; 
			min=arr[i];
		}

	   //cout<<max<<endl;
	}
	cout<<c<<endl;

}
